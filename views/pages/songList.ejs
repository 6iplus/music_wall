            body {
                padding-top: 0;
                margin-top: 0;
            }
            h1{
                font-family: "Lucida Console", Courier, monospace;
                font-size: 25px;
                text-align: center;
                letter-spacing: -2px;
            }
            .search-input, .footer, .result{
                text-align: left;
                margin:0;
            }

            #searchInput{
                width: 210px;
                height: 40px;
                margin: 10px 5px 15px 10px;
                padding: 0 0 0 10px;
                
                border: 1px solid #ccc;
                border-radius: 4px;
                
            }
            #searchButton, #submitButton, #bulletSubmit{
                width: 65px;
                height: 40px;
                margin: 0px 0 15px 0;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                padding-left: 10px; 
                
            }
            #bulletInput{
                width: 190px;
                height: 40px;
                margin: 10px 0 15px 10px;
                padding: 0 0 0 10px;
                display: inline-block;
                border: 1px solid #ccc;
                border-radius: 4px;
                
            }
            .search_results {
                margin-top:0;
                height:330px;
                overflow-y: auto;
                overflow-x: hidden;
                /*background:#fff;*/
                background-image: inherit;
            }
            .footer {
                bottom:0;
                text-align: center;
            }
            .forEachResult {
                margin: 0;
                height:90px;
                background-image: inherit;
            } 
            .result {
                height:90px;
                overflow-x: hidden;
                /*background:#fff;*/
            }
            .result input {
                border: none;
                float: left;
                width: 20px;
                height: 20px;
                margin: 45px 15px 0 15px;
            }
            .result img {
                border: none;
                float: left;
                width: 140px;
                height: 85px;
                margin: 0 10px 0 0;
                
            }
